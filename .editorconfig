# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JSON-Files
[*.json]
indent_style = tab

# MD-Files
[*.md]
indent_size = 2
max_line_length = 80

# NEON-Files
[*.neon]
indent_size = 2
indent_style = tab

# XML-Files
[*.xml]
indent_size = 2

# YAML-Files
[*.{yaml,yml}]
indent_size = 2
